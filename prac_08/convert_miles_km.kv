BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_distance
            text: "34"
            font_size: 48
            size_hint_x: 0.8
            multiline: False
            on_text_validate: app.convert()
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: "Up"
                font_size: 48
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                font_size: 48
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        font_size: 48
        on_press: app.convert()
    Label:
        text: app.output_distance
        font_size: 48
        color: (1, 1, 0, 1)